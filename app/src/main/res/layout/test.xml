<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/barHome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="32dp"
            android:backgroundTint="@color/grey">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech Zone"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textColor="#FDB827"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/bt_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"/>
                <ImageView
                    android:id="@+id/bt_filter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/filter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/bt_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_favorite_border_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/bt_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cart2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/barHome"
            android:text="BEST SALE"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/barHome"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_bt_home"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_add_shopping_cart_24"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_bt_home2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOP NOW"
                        android:textSize="20sp"

                        android:textColor="@color/black"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/anhslide"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/barHome"
            />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_below="@id/anhslide">

            <ImageView
                android:id="@+id/samsung"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/samsung" />


            <ImageView
                android:id="@+id/ios"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ios" />

            <ImageView
                android:id="@+id/vivo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/vivo" />

            <ImageView
                android:id="@+id/oppo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/oppo" />

            <ImageView
                android:id="@+id/xiaomi"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/redmi" />

            <ImageView
                android:id="@+id/lenovo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/lenovo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_below="@id/linearLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SamSung"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="IPhone"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:text="ViVo"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:text="OPPO"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Xiaomi"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:text="Lenovo"
                android:textSize="12sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvtop"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                tools:listitem="@layout/item_topth2"
                tools:itemCount="2"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="197dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="198dp"
                android:text="TOP ĐIỆN THOẠI THỊNH HÀNH"
                android:textColor="#229E27"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linearLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    tools:ignore="MissingConstraints">

                </ImageView>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/xemtatca"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="Xem tất cả" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="TOP ĐIỆN THOẠI ĐƯỢC YÊU THÍCH"
                    android:textColor="#229E27" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvbanchay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    tools:listitem="@layout/item_banchay2"
                    tools:itemCount="2">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>