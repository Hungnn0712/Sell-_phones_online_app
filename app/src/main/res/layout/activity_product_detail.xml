<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/barHome"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="32dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tech Zone"
                        android:textStyle="bold"
                        android:textSize="28dp"
                        android:textColor="#FDB827"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <ImageView
                        android:id="@+id/bt_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/search"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="100dp"/>
                    <ImageView
                        android:id="@+id/bt_filter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/filter"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <ImageView
                        android:id="@+id/bt_fav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_favorite_border_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <ImageView
                        android:id="@+id/bt_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cart2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/barHome"
                android:src="@drawable/back_login"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/barHome"
                >
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="PRODUCT DETAIL"
                    android:textColor="@color/white"
                    android:textSize="42sp"
                    />
                <View
                    android:layout_width="200dp"
                    android:layout_height="5dp"
                    android:background="@color/white"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="105dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/home1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_detail"
                android:orientation="vertical"
                android:background="#DFDFDF">
                <androidx.cardview.widget.CardView
                    android:id="@+id/barDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="32dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/home_login"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/yellow"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRODUCT"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/yellow"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Detail"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:src="@drawable/iphone14_test"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iPhone 14 Pro 128GB"
                        android:textSize="24sp"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/black"
                        android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23.890.000₫"
                            android:textSize="24sp"
                            android:fontFamily="@font/baloo"
                            android:textColor="#03A9F4"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="iPhone 15 Pro là một trong những chiếc điện thoại thông minh được mong đợi nhất năm 2023. Với nhiều tính năng mới và cải tiến, iPhone 15 Pro chắc chắn sẽ là một lựa chọn tuyệt vời cho những người dùng đang tìm kiếm một chiếc điện thoại cao cấp."
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Màu Sắc:"
                            android:textSize="20sp"
                            android:fontFamily="@font/baloo"
                            android:textColor="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số Lượng:"
                            android:textSize="20sp"
                            android:fontFamily="@font/baloo"
                            android:textColor="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="120dp"
                                android:elevation="16dp"
                                app:cardCornerRadius="8dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_favorite_border_24" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:elevation="16dp"
                                app:cardCornerRadius="8dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/cart" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/white"
                    >

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>